<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf"
    tools:context="genius.mykhatamulquranbeta.startOfflineActivity">

    <Button
        android:id="@+id/btn_start1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="160dp"
        android:text="mulai"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_online"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:text="go online"
        android:layout_below="@+id/btn_start1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/n"
        android:layout_marginBottom="116dp"
        android:layout_alignBottom="@+id/btn_start1"
        android:layout_alignParentStart="true" />
</RelativeLayout>
