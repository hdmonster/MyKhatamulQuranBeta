<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="genius.mykhatamulquranbeta.startOnlineActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="900dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/onlinemenu"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_grafik"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/statistik"
        android:layout_marginStart="28dp"
        android:layout_alignTop="@+id/btn_record"
        android:layout_toEndOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/start"
        android:layout_alignTop="@+id/btn_continue"
        android:layout_alignStart="@+id/btn_grafik" />

    <Button
    android:id="@+id/btn_record"
    android:layout_width="100dp"
    android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/record"
        android:onClick="openRec"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/btn_continue"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/juddy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="58dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/btn_record" />

    <Button
    android:id="@+id/btn_logout"
    android:layout_width="30dp"
    android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/exit"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/btn_start"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/dibuat"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/dibuat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp" />

</RelativeLayout>
