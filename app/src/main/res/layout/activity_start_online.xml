<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf"
    tools:context="genius.mykhatamulquranbeta.startOnlineActivity">

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/save"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="58dp"
        android:layout_above="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/refresh"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="152dp"
        android:layout_above="@+id/btn_record"
        android:layout_alignStart="@+id/btn_record" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/e"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="242dp"
        android:layout_above="@+id/btn_grafik"
        android:layout_alignStart="@+id/btn_grafik" />

    <Button
        android:id="@+id/btn_grafik"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@drawable/i"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="330dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="320dp"
        android:layout_height="190dp"
        app:srcCompat="@drawable/n"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
