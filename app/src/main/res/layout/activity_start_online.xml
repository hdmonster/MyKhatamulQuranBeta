<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="genius.mykhatamulquranbeta.startOnlineActivity">

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start"
        android:layout_marginBottom="30dp"
        android:background="@drawable/juddy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="58dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn_record"
        android:layout_alignStart="@+id/btn_record"
        android:layout_marginBottom="20dp"
        android:background="@drawable/start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="152dp" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_above="@+id/btn_grafik"
        android:layout_alignStart="@+id/btn_grafik"
        android:layout_marginBottom="18dp"
        android:background="@drawable/rekaman"
        android:onClick="openRec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="242dp" />

    <Button
        android:id="@+id/btn_grafik"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/asxz"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="330dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="320dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
