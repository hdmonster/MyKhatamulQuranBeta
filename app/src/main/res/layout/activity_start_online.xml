<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="genius.mykhatamulquranbeta.startOnlineActivity">

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/juddy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="58dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_start" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="152dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/record"
        android:onClick="openRec"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="242dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_continue"
        android:layout_marginBottom="62dp" />

    <Button
        android:id="@+id/btn_grafik"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/statistik"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="330dp"
        android:layout_below="@+id/btn_start"
        android:layout_alignStart="@+id/btn_start"
        android:layout_marginTop="51dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="900dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/onlinemenu"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/exit" />
</RelativeLayout>
