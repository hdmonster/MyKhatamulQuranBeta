<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="genius.mykhatamulquranbeta.KeteranganActivity"
    android:background="@drawable/leaf">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/n" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/tp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/reading"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="550dp"
        android:layout_height="80dp"
        android:text="Dari Abi Umamah r.a katanya, aku mendengar Rasulullah s.a.w bersabda “Bacalah olehmu akan Al-Quran, sesungguhnya dia datang pada Hari Kiamat kelak memberi syafaat kepada tuannya”. – Hadis Riwayat Muslim."
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/button4"
        android:layout_marginStart="62dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:text="Dari Saidina Usman bin Affan r.a katanya, berkata Rasulullah s.a.w “Sebaik-baik kamu ialah seorang yang belajar Al-Quran dan mengajarnya” Hadith riwayat Bukhari."
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:text="“ Bacalah olehmu akan al-Quran sesungguhnya ia akan datang pada hari qiamat memberi syafa’at kepada pembacanya” (Riwayat Muslim)"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/imageView2" />




</RelativeLayout>
